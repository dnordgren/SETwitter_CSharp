@model Twitter.Models.Home.HomeViewModel

<h4>My Feeds</h4>
@using (Ajax.BeginForm("CreateFeed", "Home", new AjaxOptions() { UpdateTargetId = "FeedList", HttpMethod = "POST" }, new { id ="FeedForm" }))
{
    <div id="feedModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">New Feed</h3>
        </div>
        <div class="modal-body">
            <p>Enter a descriptive name for your feed.  Others will be able to search for your tweets using this name.</p>
            @Html.TextBoxFor(m => m.NewFeedName, new { placeholder = "Feed Name" })
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <input type="submit" onclick="$('#feedModal').modal('hide'); $('#FeedAlert').hide(); $('#Tweet').show()" class="btn btn-primary" value="Create Feed"/>
        </div>
</div>
}

<ul class="nav nav-tabs nav-stacked nav-pills">
        @foreach (var feed in Model.Feeds)
        {
            <li id="feedSelector-@(feed.ID)" class="@((feed.ID == Model.DisplayFeed) ? "active" : "")"><a href="javascript:FilterFeed(@(feed.ID))">@Html.DisplayFor(m => feed.Name)</a></li>
        }
</ul>
<a class="btn btn-inverse btn-small" href="#feedModal" data-toggle="modal">Add Feed</a>