@model Twitter.Models.Home.HomeViewModel

<h4>My Subscriptions</h4>

<ul class="nav nav-tabs nav-stacked nav-pills">
        @foreach (var feed in Model.Subscriptions)
        {
            <li id="feedSelector-@(feed.ID)" class="@((feed.ID == Model.DisplayFeed) ? "active" : "")"><a href="javascript:FilterFeed(@(feed.ID))">@Html.DisplayFor(m => feed.Name) by @Html.DisplayFor(m => feed.Owner.Name)</a></li>
        }
</ul>

<input id="feedQuery" name="feedQuery" class="fluid" type="text"/>
@using (Ajax.BeginForm("SubscribeToFeed", "Home", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "SubscriptionList" }))
{
    <input type="hidden" id="subscribeTo" name="subscribeTo" value="-1" />
    <input type="submit" class="btn btn-inverse btn-small" value="Add Subscription" />
}
